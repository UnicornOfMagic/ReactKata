{
  "name": "ReactKata",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "yarn run start-server && react-native run-ios",
    "devtools": "react-devtools",
    "test": "jest --testPathPattern=./test",
    "pree2e": "detox build",
    "e2e": "detox test",
    "start-server": "node smoke-test-server.js &"
  },
  "dependencies": {
    "express": "^4.16.2",
    "native-base": "^2.4.3",
    "react": "16.3.1",
    "react-native": "0.55.3"
  },
  "devDependencies": {
    "babel-jest": "22.4.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-native": "4.0.0",
    "chai": "^4.1.2",
    "detox": "^7.3.5",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "flow-bin": "^0.71.0",
    "jest": "^22.4.3",
    "jest-serializer-enzyme": "^1.0.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.3.2",
    "react-test-renderer": "16.3.1"
  },
  "jest": {
    "preset": "react-native"
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "e2e/config.json",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/ReactKata.app",
        "build": "xcodebuild -project ios/ReactKata.xcodeproj -scheme ReactKata -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build -quiet",
        "type": "ios.simulator",
        "name": "iPhone 8"
      }
    }
  }
}
